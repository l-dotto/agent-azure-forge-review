# Azure Code Reviewer Configuration
# Copy this file to .env and fill in your values

# Anthropic API Key (required)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key_here

# Azure DevOps Configuration (optional for local testing)
AZURE_DEVOPS_ORG=https://dev.azure.com/your-organization
AZURE_DEVOPS_PROJECT=your-project-name

# Severity threshold for inline comments
# Options: critical | high | medium | all
# Default: high
INLINE_SEVERITY_THRESHOLD=high
